    "# Loops are flow control. They change how data moves through the application.\n",
    "#if...elif...else \n",
    "#if a equals b, return \"they are equal.\" If a> b return \"a is greater\" \n",
    "# and if b >a return \"b is greater\".\n",
    "a = 1 \n",
    "b = 3\n",
    "if a == b:\n",
    "    print(\"they are equal\")\n",
    "elif a>b: \n",
    "    print(\" a is greater\")\n",
    "elif b>a:\n",
    "    print(\"b is greater\")"
