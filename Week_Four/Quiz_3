    "import pandas as pd \n",
    "csv_df = pd.read_csv('belize_airbnb_listings.csv')\n",
    "grouped_df = csv_df.groupby('neighbourhood')[['price', 'number_of_reviews', 'availability_365']].agg({\n",
    "    'price': 'mean',\n",
    "    'number_of_reviews': 'sum',\n",
    "    'availability_365': 'max'\n",
    "}).reset_index()\n",
    "\n",
